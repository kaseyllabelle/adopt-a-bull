<p class="section-header section-header-main">discover puppies</p>
<div class="discovery-wrapper">
	<div class="puppy-card">
		<div class="puppy-card-container" data-puppyid="<%=data[0]._id%>">
			<img src="<%=data[0].photo%>" class="puppy-card-thumbnail" />
			<div class="puppy-card-info">
				<p class="puppy-card-name"><%=data[0].name%></p>
				<i class="material-icons puppy-card-icon">info</i>
			</div>
			<div class="puppy-card-expanded">
				<p class="name">Name: <%=data[0].name%></p>
				<p class="gender">Gender: <%=data[0].gender%></p>
				<p class="age">Age: <%=data[0].age%></p>
				<p class="size">Size: <%=data[0].size%></p>
				<p class="training">Training: <%=data[0].training%></p>
				<p class="characteristics"><%=data[0].characteristics%></p>
				<p class="compatibility"><%=data[0].compatibility%></p>
				<p class="biography">Biography: <%=data[0].biography%></p>
				<p class="adoption-fee">Adoption Fee: <%=data[0].adoptionFee%></p>
				<div class="shelter-info">
					<p class="name">Shelter: <%=data[0].shelterId.name%></p>
					<p class="address"><%=data[0].shelterId.address.number%> <%=data[0].shelterId.address.street%></p>
					<p class="address"><%=data[0].shelterId.address.city%> <%=data[0].shelterId.address.state%> <%=data[0].shelterId.address.zipcode%></p>
					<p class="telephone"><%=data[0].shelterId.telephone%></p>
					<p class="email"><%=data[0].shelterId.email%></p>
				</div>
			</div>
		</div>
	</div>
</div>
<div style="display: none;" class="hidden-puppy" data-nextpuppy="<%= data[2].nextPosition %>">
	<img src="<%=data[1].photo%>" />
	<p><%- JSON.stringify(data[1]) %></p>
</div>